# see https://editorconfig.org/
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
insert_final_newline = true
indent_size = 4
charset = utf-8

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{yml,yaml,json,jsonb,jsonl,toml}]
indent_size = 2

[*.txt]
trim_trailing_whitespace = false
insert_final_newline = false

[*.tsv]
indent_style = tab

[Makefile]
indent_style = tab
